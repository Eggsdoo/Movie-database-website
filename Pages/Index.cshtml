@page
@model IndexModel

@for(int i = 0; i < Model.movieTitles.Count; i++) {
    <a asp-page="movie" asp-route-movieID="@Model.movieIDs[i]">
        <div class="movieCard">
            <div class="movieCardTop" 
                style="background: url(@Model.posterURLs[i]); background-size: cover;">
            </div>
            <div class="movieCardBottom shadow">
                <p>@Model.overviews[i]</p>
            </div>
        </div>
    </a>
}